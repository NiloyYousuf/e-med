<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.alarm.orderpagecontroller">
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <content>
            <VBox fx:id="itemContainer" prefHeight="480.0" prefWidth="720.0" spacing="5">
                <children>
                    <AnchorPane prefHeight="51.0" prefWidth="721.0">
                        <children>
                            <ImageView fitHeight="53.0" fitWidth="56.0" layoutX="14.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@Untitled-removebg-preview.png" />
                                </image>
                            </ImageView>
                            <Button layoutX="16.0" layoutY="19.0" mnemonicParsing="false" onAction="#backbuttonpressed" opacity="0.0" prefHeight="40.0" prefWidth="47.0" text="&lt;-">
                                <cursor>
                                    <Cursor fx:constant="HAND" />
                                </cursor></Button>
                     <Label layoutX="549.0" layoutY="24.0" text="TOTAL" />
                     <TextArea fx:id="total_order_value" layoutX="593.0" layoutY="5.0" prefHeight="57.0" prefWidth="90.0">
                        <font>
                           <Font name="System Bold" size="25.0" />
                        </font></TextArea>
                        </children>
                    </AnchorPane>
               <AnchorPane prefHeight="193.0" prefWidth="721.0">
                  <children>
                     <Button layoutX="469.0" layoutY="149.0" mnemonicParsing="false" onAction="#placeorderButtonPressed" text="Place Order" />
                     <TextArea fx:id="addressarea" layoutX="315.0" layoutY="26.0" prefHeight="0.0" prefWidth="358.0" />
                     <Label layoutX="209.0" layoutY="30.0" text="Delivery Address:" />

                      <ChoiceBox fx:id="myChoiceBox" layoutX="23.0" layoutY="39.0" prefWidth="150.0" value="Dhaka">
                          <items>
                              <FXCollections fx:factory="observableArrayList">
                                  <String fx:value="Dhaka" />
                                  <String fx:value="Chittagong" />
                                  <String fx:value="Rajshahi" />
                              </FXCollections>
                          </items>
                      </ChoiceBox>
                     <TextArea fx:id="phonenoarea" layoutX="315.0" layoutY="84.0" prefHeight="0.0" prefWidth="358.0" />
                     <Label layoutX="209.0" layoutY="87.0" text="Contact no:" />
                     <Label layoutX="23.0" layoutY="149.0" text="Payment Method:(Cash On Delivery)" />



                  </children>
               </AnchorPane>
                </children></VBox>
        </content>
    </ScrollPane>
</VBox>
